<!DOCTYPE html>
<html>
  <head>
    <title>YallaNotlob</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in?%>
      <%= link_to 'Home', destroy_user_session_path, method: :delete %> |
      <%= link_to 'Friends', destroy_user_session_path, method: :delete %> |
      <%= link_to 'Groups', groups_path, method: :get %> |
      <%= link_to 'Orders', destroy_user_session_path, method: :delete %> |
      <%= link_to 'Logout', destroy_user_session_path, method: :delete %> |
    <% end %>
    <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
